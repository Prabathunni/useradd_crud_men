<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

</head>

<body>


    <div class="w-full min-h-screen bg-gray-800 text-white p-10">

        <a href="/" class="text-blue-700 ms-35">Back</a>


        <h1 class="text-2xl ms-35 mt-10">All Users</h1>

        <div class="users flex gap-3 flex-wrap items-center justify-center">

            <% if(users.length>0){ %>

                <% users.forEach((user)=>{ %>


                    <div class="user w-72 p-4 bg-gray-700 rounded mt-5">

                        <div class="w-full h-52 bg-gray-500 rounded-md mb-3"><img src="<%= user.image %>"
                                class="w-full h-full  rounded-md" alt=""></div>

                        <h1>
                            <%= user.name %>
                        </h1>
                        <h1>
                            <%= user.email %>
                        </h1>

                        <div class="flex justify-between items-center mt-6">
                            <a href="/edit/<%= user._id %>" class="text-blue-500">Edit user</a>
                            <a href="/delete/<%= user._id %>" class="text-red-500">Delete user</a>
                        </div>

                    </div>
                    <% }) %>

                        <% } else { %>

                            <h1>Users empty</h1>

                            <% } %>
        </div>

    </div>


</body>

</html>